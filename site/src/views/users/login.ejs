<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/header.ejs') %>
      <!--body-->
      <div class="login">
        <form action="/users/login" method="POST" class="card">
          <div>
            <h1> Iniciar Sesion</h1>
          </div>
          <input class="card__input input--style" type="text" name="email" placeholder="E-mail" required>
          <% if(locals.errors && errors.email) { %>
            <small class="error"><%= errors.email.msg %></small>
          <% } %>
          <input class="card__input input--style" type="password" name="password" id="" placeholder="Contraseña"
            required>
          <% if(locals.errors && errors.password) { %>
              <small class="error"><%= errors.password.msg %></small>
          <% } %>
          <div class="check">
            <input class="RecordarChecbox" type="checkbox" name="Recordar">
            <label class="Recordar" for="Recordar">Recordarme</label>
          </div>
          <input type="submit" role="button" value="Ingresar" class="button button--positionIngresar">
          
          <a class="register-link" href="/users/register">¿No tienes una cuenta?</a>
        </form>
      </div>

      <%- include('../partials/footer.ejs') %>

  </body>

</html>