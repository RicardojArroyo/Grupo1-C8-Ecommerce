<!DOCTYPE html>
<html lang="es">
    <%- include ('../admin/adminHead.ejs') %>
<body>
    <%- include('../admin/adminHeader.ejs') %>
    <main class="admin-main">
        
        <div class="container">
            <h2>Editar Producto</h2>
            <form action="/admin/edit/<%= producto.id %>?_method=PUT" method="POST">
                <div class="input-form">
                    <label for="productName">Nombre del producto: </label>
                    <input type="text" name="productName" id='productName' value="<%= producto.productName %>">
                </div>
                <div class="input-form">
                    <label for="price">Precio: </label>
                    <input type="text" name="price" id='price' value="<%= producto.price %>">
                </div>
                <div class="input-form">
                    <label for="description">Descripción: </label>
                    <textarea name="description" id='description'><%= producto.description %></textarea>
                </div>
                <div class="input-form">
                    <label>Categoría: </label>
                    <select name="category" id="" value="<%= producto.category %>">
                        <option value="Cocina">Cocina</option>
                        <option value="Comedor">Comedor</option>
                        <option value="Dormitorio">Dormitorio</option>
                        <option value="Living">Living</option>
                        <option value="Oficina">Oficina</option>
                    </select>
                </div>
                <div class="input-form">
                    <label for="measures">Medidas: </label>
                    <input type="text" name="measures" id='measures' value="<%= producto.measures %>">
                </div>
                <div class="input-form">
                    <label for="origin">Origen: </label>
                    <input type="text" name="origin" id='origin' value="<%= producto.origin %>">
                </div>
                <div class="input-form">
                    <label>Imagenes del producto</label>
                    <input type="file" name="image" accept=".jpg, .jpeg, .png" multiple>
                </div>
                <div class="buttons-edit">
                    <div class="button-form-edit">
                        <button type="submit"><a href="/admin/products">Cancelar</a></button>
                    </div>
                    <div class="button-form-edit">
                        <button type="submit">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>
</html>