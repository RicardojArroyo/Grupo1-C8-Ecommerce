<!DOCTYPE html>
<html lang="es">
<%- include ('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs') %>
      <main class="home">

        <%- include('partials/carrousel.ejs') %> 

        <div class="main">
          

            <div class="section-cardsimperio1">
                <div class="cardsnproduct">
                    <div class="nuevos-productos">
                        <h1>Cocina</h1>
                    </div>
                    <% sliderProducts.forEach(product => { %> 
                    <div class="cardimp"> 
                        <div class="img-sectionimp">
                            <img src="/images/products/<%- product.images[0]?.image %>" alt="puede contener un gran mueble de Imperio">
                        </div>
                        <div class="descripcionimp">
                            <h2><%= product.productName %></h2>
                            <p>$ <%-product.price - product.price * product.discount / 100 %><b></b><span id="off"><%- product.discount %> % OFF </span>Antes $<del id='delete'><%- product.price %> </del></p>                    
                        </div>
                        <div class="button-group">
                            <a href="/product/productDetail/<%= product.id %>" class="detalles">Ver detalles</a>
                            <a href="#" class="añadir">Añadir al carrito</a>
                        </div>
                        <div class="star-icons">
                            <a href=""><i class="fas fa-star"></i></a>
                            <a href=""><i class="fas fa-star"></i></a>
                            <a href=""><i class="fas fa-star"></i></a>                
                            <a href=""><i class="fas fa-star"></i></a>
                            <a href=""><i class="fas fa-star-half-alt"></i></a>
                        </div>     
                    </div>
                    <% }) %>
            </div>
      


      </main>
      <%- include('partials/footer.ejs') %>
  </body>

</html>