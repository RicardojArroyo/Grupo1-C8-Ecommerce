<!DOCTYPE html>
<html lang="es">

<%- include ('../partials/head.ejs') %>

<body>
  <%- include('../partials/header.ejs') %>

  <main class="home">
    <div class="register">
      <form action="/users/register" method="POST" class="card">
        <h1>Crear Cuenta</h1>
        <div class="formulario">
          <input type="text" placeholder="Nombre" name="name" id="nombre" required class="input-form"><br>

          <input type="text" placeholder="Apellido" name="lastname" required class="input-form"><br>

          <input type="email" placeholder="Email" name="email" required class="input-form"><br>

          <input type="password" placeholder="Contraseña" name="password" required class="input-form"><br>

          <input type="password" placeholder="Repita su contraseña" name="pass" required class="input-form"><br>

          <div class="check">
            <input type="checkbox" name="terms" id="recordar" class="checkbox"> 
            <label for="terms">Acepto los términos y condiciones</label>
          </div>
          <button class="button button--positionRegister" onclick="validate()" id="button"
          type="submit">Registrarse</button>
          <a href="/users/login" class="login-link">Ya tengo una cuenta</a>
        </div>
      </form>
    </div> 
     <%- include('../partials/footer.ejs') %>

  </main>


</body>

</html>