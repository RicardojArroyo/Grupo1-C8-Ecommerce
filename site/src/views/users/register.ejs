<!DOCTYPE html>
<html lang="es">

<%- include ('../partials/head.ejs') %>

<body>
  <%- include('../partials/header.ejs') %>

  <main class="home">
    <div class="register">
      <form action="/users/register" method="POST" class="card">
        <h1>Crear Cuenta</h1>
        <div class="formulario">
          <input type="text" placeholder="Nombre" name="name" id="nombre" required class="input-form"><br>
          <% if(locals.errors && errors.name) { %>
            <small class="error"><%= errors.name.msg %></small>
          <% } %>

          <input type="text" placeholder="Apellido" name="lastname" required class="input-form"><br>
          <% if(locals.errors && errors.lastname) { %>
            <small class="error"><%= errors.lastname.msg %></small>
          <% } %>

          <input type="email" placeholder="Email" name="email" required class="input-form"><br>
          <% if(locals.errors && errors.email) { %>
            <small class="error"><%= errors.email.msg %></small>
          <% } %>

          <input type="password" placeholder="Contraseña" name="pass1" required class="input-form"><br>
          <% if(locals.errors && errors.pass) { %>
            <small class="error"><%= errors.pass.msg %></small>
          <% } %>

          <input type="password" placeholder="Repita su contraseña" name="pass2" required class="input-form">
          <% if(locals.errors && errors.pass2) { %>
            <small class="error"><%= errors.pass2.msg %></small>
          <% } %>

          <div class="check">
            <input type="checkbox" name="terms" id="recordar" class="checkbox"> 
            <label for="terms">Acepto los términos y condiciones</label>
          </div>
          <% if(locals.errors && errors.terms) { %>
            <small class="error"><%= errors.terms.msg %></small>
          <% } %>

          <button class="button button--positionRegister" onclick="validate()" id="button"
          type="submit">Registrarse</button>
          <a href="/users/login" class="login-link">Ya tengo una cuenta</a>
        </div>
      </form>
    </div> 
     <%- include('../partials/footer.ejs') %>

  </main>


</body>

</html>